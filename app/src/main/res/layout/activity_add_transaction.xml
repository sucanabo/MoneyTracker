<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".features.transaction.presentation.TransactionInputActivity"
>
    <io.ghyeok.stickyswitch.widget.StickySwitch
            android:id="@+id/sw_tran"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:ss_animationDuration="300"
            app:ss_iconPadding="18sp"
            app:ss_iconSize="22dp"
            app:ss_sliderBackgroundColor="#C1E8FF"
            app:ss_leftText="Expense"
            app:ss_rightText="Add money"
            app:ss_leftIcon="@drawable/ic_remove"
            app:ss_rightIcon="@drawable/ic_add"
            app:ss_textColor="@color/black"
            app:ss_selectedTextSize="14sp"
            app:ss_textSize="12sp"
            app:ss_animationType="line"
    />
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tfb_tran_amount"
            app:endIcon="@drawable/ic_money"
            app:labelText="Amount"
    >
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tfe_tran_amount"
                android:inputType="numberDecimal"
        />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/tfb_tran_title"
            app:endIcon="@drawable/ic_note"
            app:labelText="@string/transaction_name">
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tfe_tran_title"/>
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/tfb_tran_date"
            app:endIcon="@drawable/ic_calandar"
            app:labelText="Date">
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tfe_tran_date"/>
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/tfb_tran_note"
            app:labelText="Note (optional)"
            app:maxCharacters="300"
    >
        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tfe_tran_note"/>
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <Button android:id="@+id/btn_tran_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Save"
    />
</LinearLayout>